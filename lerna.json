{
  "packages": [
    "website",
    "packages/*",
    "examples/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "ignoreChanges": [
    ".github",
    ".yarn",
    "examples",
    "util",
    "website",
    "**/*.spec.{js,ts}",
    "**/*.md"
  ],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): release [skip ci]"
    }
  }
}
