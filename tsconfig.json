{
  "include": [
    "packages"
  ],
  "exclude": [
    "test",
    "packages/*/lib",
    "packages/*/test"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "es2019",
    // base directory to resolve non-absolute module names:
    "baseUrl": ".",
    "paths": {
      // map imports for @knorm/* directly to the src files in packages/:
      "@knorm/*": [
        "packages/*/src"
      ]
    },
    // enable all strict type-checking options:
    "strict": true,
    // generate *.d.ts files:
    "declaration": true,
    // disallow inconsistently-cased references to the same file:
    "forceConsistentCasingInFileNames": true
  }
}
